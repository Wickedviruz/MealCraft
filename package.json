{
  "name": "MealCraft",
  "private": true,
  "scripts": {
    "install:all": "npm --prefix frontend install && dotnet restore backend",
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "cd backend && dotnet run",
    "dev:frontend": "npm --prefix frontend run dev"
  },
  "devDependencies": {
    "concurrently": "^9.2.1"
  }
}